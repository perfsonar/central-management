# bwctl
-A perfSONAR -m state --state NEW -m tcp -p tcp --dport <%= bwctl_port %> -j ACCEPT

# bwctl iperf ports
-A perfSONAR -m udp -p udp --dport <%= bwctl_iperf_ports.gsub(/-/, ":") %> -j ACCEPT
